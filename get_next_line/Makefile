# **************************************************************************** #
# 1) DECLARATION                                                               #
# **************************************************************************** #

NAME = get_next_line.a
CC = gcc
CFLAG = -Wall -Werror -Wextra
RM = rm -f
AR = ar rcs

# **************************************************************************** #
# 3) FILES                                                                     #
# **************************************************************************** #

CFILE = get_next_line.c \
		get_next_line_utils.c

OFILE = $(CFILE:.c=.o)

# **************************************************************************** #
# 4) BUILD                                                                     #
# **************************************************************************** #

all: $(NAME) clean

$(NAME): $(OFILE)
	$(AR) $(NAME) $(OFILE)

%.o: %.c
	$(CC) $(CFLAG) -c $< -o $@
 
clean:
	$(RM) $(OFILE)

fclean: clean 
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re